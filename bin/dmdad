#!/bin/bash
# dmda daemon
# chkconfig: 345 20 80
# description: dmda daemon
# processname: dmda

DAEMON_PATH="/opt/dmda"

DAEMON="java -jar /opt/dmda/dmda.jar"
NAME=dmdad
DESC="Database Mail Delivery Agent"
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

case "$1" in
start)
	printf "%-50s" "Starting $NAME..."

	if [ -f $PIDFILE ]; then
		printf "%s\n" "Cannot start server as $PIDFILE exists."
	else
		cd $DAEMON_PATH
		$DAEMON &
		PID=`echo $!`

		# Wait 2 seconds before creating the pid file incase the server encounters a startup error
        	sleep 2

		if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
			printf "%s\n" "Fail"
		else
			echo $PID > $PIDFILE
        		printf "%s\n" "Ok"
        	fi

	fi
;;
status)
        printf "%-50s" "Checking $NAME..."
        if [ -f $PIDFILE ]; then
            PID=`cat $PIDFILE`
            if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
                printf "%s\n" "Process dead but pidfile exists"
            else
                echo "Running"
            fi
        else
            printf "%s\n" "Service not running"
        fi
;;
stop)
        printf "%-50s" "Stopping $NAME"
            PID=`cat $PIDFILE`
            cd $DAEMON_PATH
        if [ -f $PIDFILE ]; then
            kill -HUP $PID
            printf "%s\n" "Ok"
            rm -f $PIDFILE
        else
            printf "%s\n" "pidfile not found"
        fi
;;

restart)
  	$0 stop
  	$0 start
;;

*)
        echo "Usage: $0 {status|start|stop|restart}"
        exit 1
esac
